@model IEnumerable<TiendaTecnologica.Models.Productos>


<div class="main">
        <form asp-controller="Productos" asp-action="Buscar" class="input-group md-form form-sm form-2 pl-0">
            <input class="form-control my-0 py-1 " type="text" placeholder="Buscar" name="textoBusqueda">
            <input class="btn btn-outline-success my-2 my-sm-0 fa fa-search"  value="Buscar" type="submit"/>
        </form>
</div>

<div class="productlist">
    </br>
    @foreach (var item in Model)
    {

        <div class="row pl ">
            <div class="columnImage">
                <a style="display:block" asp-area="" asp-controller="Productos" asp-action="Detalle">
                    <img src="~/images/@(item.ProImagen)" alt="Italian Trulli">
                </a>
            </div>
            <div class="column">
                <a style="display:block" asp-area="" asp-controller="Productos" asp-action="Detalle">
                    @Html.DisplayFor(modelItem => item.ProDescricion)
                </a>
                <br />
                <b>@Html.DisplayFor(modelItem => item.ProPrecio)</b>

            </div>
        </div>
 
        }
    </div>
       
        @{
            ViewData["Title"] = "Inicio";
        }

